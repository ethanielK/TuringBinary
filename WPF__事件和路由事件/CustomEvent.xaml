<Window x:Class="WPF__事件和路由事件.CustomEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF__事件和路由事件"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Name="baseWindow"
        Title="自定义路由事件"
        Width="800"
        Height="450"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid x:Name="BaseGrid">
        <StackPanel x:Name="StackPanel" Margin="20">
            <DockPanel x:Name="DockPanel">
                <Canvas x:Name="Canvas">
                    <Grid x:Name="InsideGrid" Margin="20">
                        <local:TimeButton x:Name="btnTime"
                                          Width="80"
                                          Height="40"
                                          Content="时间按钮" />
                        <ListBox x:Name="listBox" Margin="0,45,-130,-328" />
                    </Grid>
                </Canvas>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
